# ConfRadar Environment Configuration
# Copy this file to .env and update with your values

# PostgreSQL Database Configuration
DATABASE_URL=postgresql+psycopg://confradar:confradar@localhost:5432/confradar
POSTGRES_USER=confradar
POSTGRES_PASSWORD=confradar
POSTGRES_DB=confradar
POSTGRES_HOSTNAME=postgres

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@confradar.local
PGADMIN_DEFAULT_PASSWORD=admin

# For Dagster when running in Docker
# POSTGRES_HOSTNAME=postgres

# For local development outside Docker (optional)
# DATABASE_URL=postgresql+psycopg://confradar:confradar@localhost:5432/confradar
# POSTGRES_HOSTNAME=localhost

# For testing with SQLite (optional)
# DATABASE_URL=sqlite:///test.db

# LLM Configuration
# Prefer service account key; fallback to standard OPENAI_API_KEY
CONFRADAR_SA_OPENAI=your-openai-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here

# LiteLLM Base URL (default: http://localhost:4000)
LITELLM_BASE_URL=http://localhost:4000
# For direct OpenAI API:
# OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Provider and Model
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# OpenAI Timeouts and Retries
OPENAI_TIMEOUT_S=20.0
OPENAI_MAX_RETRIES=3
